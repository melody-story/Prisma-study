// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Voice {
    id	          Int      @default(autoincrement()) @id
    file_size	    Bytes    @db.ByteA   //수정
    description	  String   @db.Text() @default("")//(50)
    url	          String   @db.VarChar(500) //url필드가 있는지?
    // user	        USER     @relation("WrittenPosts", fields: [userId], references: [id])
    userId	      Int      @db.Integer
    dateOfCreated	DateTime @db.Timestamptz(3)
    dateOfUpdated	DateTime @db.Timestamptz(3)
}


model VoiceStatus {
    id      	    Int      @default(autoincrement()) @id
    voiceId	      Int      @db.Integer @relation("Voice", references: [id])
    downloadCount	Int      @db.Integer //수정함
    clientId   	  Int      @db.Integer
    verify      	String   @db.VarChar(50)
    userId	      Int      @db.Integer
    dateOfCreated	DateTime @db.Timestamptz(3)
    dateOfUpdated	DateTime @db.Timestamptz(3) 
}


model Script {
    id	          Int      @default(autoincrement()) @id
    title	        String   @db.VarChar(50) @unique
    url	          String   @db.VarChar(300)
    file_size	    Bytes    @db.ByteA   //수정
    remarks       String   @db.VarChar(1000) 
    clientId	    Int      @db.Integer
    dateOfCreated	DateTime @db.Timestamptz(3)
    dateOfUpdated	DateTime @db.Timestamptz(3)
}

model ScriptStatus {
    id	          Int      @default(autoincrement()) @id
    scriptId	    Int      @db.Integer
    post	        Boolean  @db.Boolean @default(false)
    deadline	    Boolean  @db.Boolean @default(false)
    downloadCount	Int      @db.Integer @default(0)//수정함 
    clientId	    Int      @db.Integer
    dateOfCreated	DateTime @db.Timestamptz(3)
    dateOfUpdated	DateTime @db.Timestamptz(3)
}

model Sentence {
    id	          Int      @default(autoincrement()) @id
    scriptId	    Int      @db.Integer
    context	      String   @db.VarChar(5000)
    dateOfCreated	DateTime @db.Timestamptz(3)
    dateOfUpdated	DateTime @db.Timestamptz(3)
}

model SentenceStatus {
    id	                  Int      @default(autoincrement()) @id
    sentanceRequirementId	Int      @db.Integer
    deadlineStatus	      Boolean  @db.Boolean @default(false)
    dateOfCreated	        DateTime @db.Timestamptz(3)
    dateOfUpdated	        DateTime @db.Timestamptz(3)
}

model SentenceRequirement {
    id            Int      @default(autoincrement()) @id
    language      String   @db.VarChar(50)
    age	          Int      @db.Integer
    gender        String   @db.VarChar(50)
    sentanceId	  Int      @db.Integer
    voiceId	      Int      @db.Integer //nuㅣㅣ허용
    dateOfCreated	DateTime @db.Timestamptz(3)
    dateOfUpdated	DateTime @db.Timestamptz(3)
}